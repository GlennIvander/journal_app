<%= form_with model: [category, task] do |form| %>
  <div class="field form-group">
    <%= form.label :task %><br>
    <%= form.text_field :task, class:"form-control" %>
    <% task.errors.full_messages_for(:task).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class:"form-control" %>
    <% task.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.label :Date %><br>
    <%= form.date_select :due_date %>
  </div>
  <div class="actions">
    <%= form.submit class:'btn btn-primary'%>
  </div>
<% end %>
