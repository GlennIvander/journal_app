<div class="d-flex bd-highlight bg-primary sticky-top text-white">
  <div class="p-2 flex-grow-1 bd-highlight">
    <%= link_to "Journal App", root_path, class: "navbar-brand text-white font-weight-bolder ml-3" %>
  </div>

  <% if user_signed_in? %>
    <div class="p-3 bd-highlight">
      <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link text-white" %>
    </div>
    <div class="p-3 bd-highlight">
      <%= link_to "Edit Profile", edit_user_registration_path, class: "nav-link text-white" %>
    </div>
  <% else %>
    <div class="p-3 bd-highlight">
      <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-white" %>
    </div>
    <div class="p-3 bd-highlight">
      <%= link_to "Sign In", new_user_session_path, class: "nav-link text-white" %>
    </div>
  <% end %>
</div>
